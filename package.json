{
  "name": "@quxtech/pqc-crypto",
  "version": "1.0.0",
  "description": "Post-Quantum Cryptography library implementing CRYSTALS-Kyber (ML-KEM) and CRYSTALS-Dilithium (ML-DSA)",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./kem": {
      "import": "./dist/core/kem.js",
      "types": "./dist/core/kem.d.ts"
    },
    "./dsa": {
      "import": "./dist/core/dsa.js",
      "types": "./dist/core/dsa.d.ts"
    },
    "./symmetric": {
      "import": "./dist/core/symmetric.js",
      "types": "./dist/core/symmetric.d.ts"
    },
    "./keys": {
      "import": "./dist/core/keys.js",
      "types": "./dist/core/keys.d.ts"
    },
    "./session": {
      "import": "./dist/core/session.js",
      "types": "./dist/core/session.d.ts"
    },
    "./hash": {
      "import": "./dist/utils/hash.js",
      "types": "./dist/utils/hash.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src --ext .ts",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build && npm run test"
  },
  "keywords": [
    "post-quantum",
    "cryptography",
    "pqc",
    "crystals",
    "kyber",
    "dilithium",
    "ml-kem",
    "ml-dsa",
    "nist",
    "fips-203",
    "fips-204",
    "quantum-safe",
    "encryption",
    "digital-signatures"
  ],
  "author": "QUX Technologies",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/QUXTech/pqc-crypto.git"
  },
  "bugs": {
    "url": "https://github.com/QUXTech/pqc-crypto/issues"
  },
  "homepage": "https://github.com/QUXTech/pqc-crypto#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@noble/ciphers": "^1.2.1",
    "@noble/hashes": "^1.7.1",
    "@noble/post-quantum": "^0.2.1"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "typescript": "^5.7.0",
    "vitest": "^3.0.0",
    "@vitest/coverage-v8": "^3.0.0",
    "eslint": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0"
  },
  "peerDependencies": {},
  "optionalDependencies": {}
}
